@model PetLife.Models.Animal

@{
    ViewData["Title"] = "Delete";
}

<h1>Remover cadastro de Pet</h1>


<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.fotoAnimal)
        </dt>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.nomeAnimal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nomeAnimal)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.racaAnimal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.racaAnimal)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.dataNascAnimal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.dataNascAnimal)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.pesoAnimal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.pesoAnimal)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.tipoAnimal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.tipoAnimal)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.caracteristicasAnimal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.caracteristicasAnimal)
        </dd>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.fotoAnimal)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="idAnimal" />
        <input type="submit" value="Remover" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-primary">Voltar</a>
    </form>
</div>
